<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- 按下状态 -->
    <item android:state_pressed="true">
        <shape>
            <solid 
                android:color="#d5dacd" />
            <padding 
                android:bottom="10dp" 
                android:left="30dp" 
                android:right="30dp" 
                android:top="10dp" />
             <stroke 
        android:width="4dp" 
        android:color="#ffffffff"/> 
        </shape>
        </item>
    <!-- 普通状态 -->
    <item>
        <shape android:shape="rectangle">
<solid 
                android:color="#ee82ee" />
                   
            <padding 
                android:bottom="10dp" 
                android:left="30dp" 
                android:right="30dp" 
                android:top="10dp" />
             <stroke 
        android:width="5dp" 
        android:color="#ffffff"/> 
        </shape>
     </item>

</selector>